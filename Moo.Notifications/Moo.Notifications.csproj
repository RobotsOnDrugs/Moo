<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows10.0.19041.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <StartupObject>Moo.Notifications.Notifier</StartupObject>
    <ApplicationIcon>Images\GoogleChrome_64.ico</ApplicationIcon>
    <AssemblyName>Google Chrome</AssemblyName>
    <Platforms>x64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Images\BoozyMoo_Logo_2022_Black-Full-cropped.webp" />
    <None Remove="Images\GoogleChrome_full.ico" />
    <None Remove="Images\lemoo.webp" />
    <None Remove="Images\moo-icon-64.ico" />
    <None Remove="Notifications.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Images\BoozyMoo_Logo_2022_Black-Full-cropped.webp">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\GoogleChrome_64.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\GoogleChrome_full.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\lemoo.webp">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\moo-icon-64.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Notifications.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Toolkit.Uwp.Notifications" Version="7.1.3" />
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.2.230217.4" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="Images\blobfish.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="Images\deesnuts.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
